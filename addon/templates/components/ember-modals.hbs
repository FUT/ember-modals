{{#each targetObject.modals.modalsInDom as |modal|}}

  {{!-- Overlay --}}

  {{#ember-modal-overlay
    class=modal.overlayClassName
  }}

    {{!-- Modal --}}

    {{#ember-modal
      class=modal.modalClassName
      modal=modal
      showCloseButton=modal.showCloseButton
    }}

      {{!-- Modal content --}}

      {{component modal.componentName
        modal=modal
        targetObject=(if modal.context modal.context targetObject)
      }}

    {{/ember-modal}}

  {{/ember-modal-overlay}}

{{/each}}

{{yield}}
